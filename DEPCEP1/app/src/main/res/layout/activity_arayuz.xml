<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arayuz"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="Depoztio E-Cep'e Hoşgeldiniz"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#1458AC"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boş şişelerdeki barkodu tara"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#1458AC"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bakiye gelsin"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="160dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#1458AC"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"

        android:background="#6EC426"
        android:text="Kod alarak giriş yapabilrsiniz"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginTop="630dp"/>





</RelativeLayout>
